{
  "env": {
    "es2020": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": 0,
    "indent": [
      "error",
      2
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}